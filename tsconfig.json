{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "inlineSourceMap": true,
    "esModuleInterop": true,
    "noUnusedLocals": true,
    "strict": true
  },
  "include": [
    "**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts",
  ],
  "typedocOptions": {
    "name": "TypedRest for TypeScript",
    "mode": "module",
    "entryPoints": ["./index.ts"],
    "out": "docs",
    "includeVersion": true,
    "excludePrivate": true,
    "excludeNotExported": true,
    "excludeExternals": true,
    "exclude": "**/index.ts"
  }
}
